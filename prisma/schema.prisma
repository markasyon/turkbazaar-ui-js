// prisma/schema.prisma

// ➊ Datasource: veritabanı bağlantısı
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ➋ Generator: Prisma Client
generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  title       String
  description String
  image       String
  whatsapp    String
  teknik      String?
  fiyatAralik Json?
  firma       Json?
  reviews     Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  name      String
  text      String
  rating    Int
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
}